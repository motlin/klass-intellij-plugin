<idea-plugin>
    <id>com.klass</id>
    <name>Klass</name>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Klass"
                implementationClass="com.klass.intellij.KlassFileType"
                fieldName="INSTANCE"
                language="Klass"
                extensions="klass"/>
        <lang.parserDefinition language="Klass" implementationClass="com.klass.intellij.parser.KlassParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Klass" implementationClass="com.klass.intellij.highlighter.KlassSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.klass.intellij.highlighter.KlassColorSettingsPage"/>
        <completion.contributor language="Klass" implementationClass="com.klass.intellij.completion.KlassCompletionContributor"/>
        <psi.referenceContributor implementation="com.klass.intellij.reference.KlassReferenceContributor"/>
        <annotator language="Klass" implementationClass="com.klass.intellij.highlighter.KlassAnnotator"/>
        <lang.refactoringSupport language="Klass" implementationClass="com.klass.intellij.refactor.KlassRefactoringSupportProvider"/>
        <lang.findUsagesProvider language="Klass" implementationClass="com.klass.intellij.usages.KlassFindUsagesProvider"/>
        <gotoClassContributor implementation="com.klass.intellij.navigation.KlassChooseByNameClassContributor"/>
        <gotoSymbolContributor implementation="com.klass.intellij.navigation.KlassChooseByNameSymbolContributor"/>
        <lang.psiStructureViewFactory language="Klass" implementationClass="com.klass.intellij.structure.KlassStructureViewFactory"/>
        <lang.formatter language="Klass" implementationClass="com.klass.intellij.formatter.KlassFormattingModelBuilder"/>
        <codeStyleSettingsProvider implementation="com.klass.intellij.formatter.KlassCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider implementation="com.klass.intellij.formatter.KlassLanguageCodeStyleSettingsProvider"/>
        <lang.commenter language="Klass" implementationClass="com.klass.intellij.commenter.KlassCommenter"/>
        <lang.braceMatcher language="Klass" implementationClass="com.klass.intellij.braces.KlassBraceMatcher"/>
        <quoteHandler fileType="Klass" className="com.klass.intellij.quotes.KlassQuoteHandler"/>
        <lang.foldingBuilder language="Klass" implementationClass="com.klass.intellij.folding.KlassFoldingBuilder"/>
    </extensions>

</idea-plugin>
